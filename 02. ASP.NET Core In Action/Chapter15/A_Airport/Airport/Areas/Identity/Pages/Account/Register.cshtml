@page
@model RegisterModel
@{
    this.ViewData["Title"] = "Register";
}

<h1>@(this.ViewData["Title"])</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@(this.Model.ReturnUrl)" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.EmployeeNumber"></label>
                <input asp-for="Input.EmployeeNumber" class="form-control" />
                <span asp-validation-for="Input.EmployeeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.BoardingPassNumber"></label>
                <input asp-for="Input.BoardingPassNumber" class="form-control" />
                <span asp-validation-for="Input.BoardingPassNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DateOfBirth"></label>
                <input asp-for="Input.DateOfBirth" class="form-control" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FrequentFlyerClass"></label>
                <select asp-for="Input.FrequentFlyerClass" asp-items="this.Model.FrequentFlyerClasses" class="form-control">
                    <option></option>
                </select>
                <span asp-validation-for="Input.FrequentFlyerClass" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="Input.IsBannedFromLounge" type="checkbox" class="form-check-input" />
                <label asp-for="Input.IsBannedFromLounge"></label>
                <span asp-validation-for="Input.IsBannedFromLounge" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
