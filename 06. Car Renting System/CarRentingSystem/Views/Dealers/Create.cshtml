@model BecomeDealerFormModel

@{
    this.ViewBag.Title = "Become Dealer";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-10">
            <h2 class="mt-2 mb-4 text-center">@(this.ViewBag.Title)</h2>
            <form method="post">
                <div class="form-floating mb-3">
                    <input is-valid="@nameof(this.Model.Name)" class="form-control" asp-for="Name" required="required">
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input is-valid="@nameof(this.Model.PhoneNumber)" class="form-control" asp-for="PhoneNumber" required="required">
                    <label asp-for="PhoneNumber"></label>
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
